<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<AnchorPane minHeight="0.0" minWidth="0.0" xmlns="http://javafx.com/javafx/null"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.legec.imageCrowler.instagram.InstaTabController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="TOP_CENTER" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label text="Tags"/>
                                <ListView fx:id="instaTagList" prefHeight="200.0"
                                          prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="addInstaTag" mnemonicParsing="false"
                                                onAction="#onAddInstaTag" prefHeight="30.0"
                                                prefWidth="30.0" text="+"/>
                                        <Button fx:id="removeInstaTag" mnemonicParsing="false"
                                                onAction="#onRemoveInstaTag" prefHeight="30.0"
                                                prefWidth="30.0" text="-"/>
                                    </children>
                                    <VBox.margin>
                                        <Insets left="5.0"/>
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </VBox>
                        <Separator orientation="VERTICAL" prefHeight="200.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Separator>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Instagram token:"/>
                                        <TextField fx:id="instaToken"
                                                   promptText="Paste instagram token here..."
                                                   HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </VBox.margin>
                                </HBox>
                                <Separator prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets bottom="5.0" top="5.0"/>
                                    </VBox.margin>
                                </Separator>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Storage folder:"/>
                                        <TextField fx:id="instaStorageFolderTF" editable="false"
                                                   HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="instaStorageFolderButton"
                                                mnemonicParsing="false"
                                                onAction="#onInstaStorageFolder" text="..."/>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </VBox.margin>
                                </HBox>
                                <Separator prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets bottom="5.0" top="5.0"/>
                                    </VBox.margin>
                                </Separator>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Saved images name prefix:"/>
                                        <TextField fx:id="instaNamePrefix" HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </VBox.margin>
                                </HBox>
                                <Separator prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets bottom="5.0" top="5.0"/>
                                    </VBox.margin>
                                </Separator>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Max number of fetched images:"/>
                                        <TextField fx:id="instaNumberOfFetchedImages"
                                                   HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="15.0" top="5.0"/>
                            </padding>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefWidth="200.0">
                    <children>
                        <Button fx:id="instaRunButton" mnemonicParsing="false"
                                onAction="#onInstaRun" prefHeight="30.0" prefWidth="150.0"
                                text="Run"/>
                        <ProgressIndicator fx:id="instaProgressIndicator" visible="false"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>